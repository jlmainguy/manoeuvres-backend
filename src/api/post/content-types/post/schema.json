{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Content": {
      "type": "richtext"
    },
    "MainImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ShortDescription": {
      "type": "text"
    },
    "FlexibleContent": {
      "type": "dynamiczone",
      "components": [
        "post.richtext",
        "post.media"
      ]
    },
    "Bibliography": {
      "displayName": "Bibliography",
      "type": "component",
      "repeatable": true,
      "component": "post.bibliography"
    },
    "BibliographyText": {
      "type": "richtext"
    },
    "PublicationDate": {
      "type": "datetime"
    },
    "SecondaryImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
